<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccidentActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:background="@drawable/border"
        android:text="안전법규"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:background="@drawable/border"
        android:text="사고사례"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/popup_helmet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="230dp"
        android:text="사례1 동영상"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/popup_drunk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:text=" 사례2 동영상"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="308dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="340dp"/>

    <Button
        android:id="@+id/popup_overweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="450dp"
        android:text="사례3 동영상"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/popup_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:text="사례4 동영상"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="539dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="580dp"/>

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="사고사례"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/case1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="#1. 202X년 X월 X일 \n 안전모를 착용하지 않은 킥보드 운전자와 \n 주행중인 자동차가 충돌하여 \n 멀리 튕겨 나간 운전자는 \n 두부에 심각한 손상을 입었다."
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/accident" />

    <TextView
        android:id="@+id/case2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="\n #2. 202X년 X월 X일 \n 술을 마시고 킥보드를 운전한 H모 씨는 \n 멀미로 운전중 구토를 하며 중심을 잡지 못 해 크게 다칠 뻔 했다."
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/case1" />

    <TextView
        android:id="@+id/case3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="\n#3. 202X년 X월 X일 \n K씨와 H씨는 킥보드 대여 요금을 \n 아끼기 위해 두 명이 한 킥보드에 탔다 \n 작은 사고에도 모두 크게 다칠 수 있다."
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/case2" />

    <TextView
        android:id="@+id/case4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="120dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text=" \n #4. 202X년 X월 X일 \n J씨는 차가 많은 도로 대신 \n 인도에서 킥보드를 운전했다. \n 게다가 빠르게 가기 위해 과속까지 하여 \n 미처 뒤를 보지 못한 보행자는 깜짝 놀란다"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/case3" />


</androidx.constraintlayout.widget.ConstraintLayout>